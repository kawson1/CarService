<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <context-param>
        <param-name>portraits_path</param-name>
        <param-value>D:\PG\SEM 7\JEE\CarService\src\main\resources\portraits</param-value>
    </context-param>

    <listener>
        <listener-class>com.example.carservice.Configuration.CreateDataSource</listener-class>
    </listener>
    <listener>
        <listener-class>com.example.carservice.Configuration.CreateServices</listener-class>
    </listener>
    <listener>
        <listener-class>com.example.carservice.Configuration.CreateControllers</listener-class>
    </listener>

    <filter>
        <filter-name>exceptionFilter</filter-name>
        <filter-class>com.example.carservice.Controllers.Filter.ExceptionFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>exceptionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>

